[core]
  excludesfile = ~/.gitignore
  # https://git-scm.com/docs/git-update-index#_untracked_cache
  untrackedCache = true

[diff]
  # detect copies and renames
  renames = copies

[diff "bin"]
  textconv = hexdump -v -C

[merge]
  conflictstyle = diff3

[push]
  # push annotated tags with branches
  followTags = true

[pull]
  rebase = true
